@model Proyecto_ENT.Exa_CatalogoProducto
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Form","CatalogoProducto",FormMethod.Post,new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.IdProducto, new { style = "display:none;" })
                        @Html.TextBoxFor(model => model.IdProducto, new { style = "display:none;" })
                        @Html.ValidationMessageFor(model => model.IdProducto)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Descripcion)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @id = "txtDescripcion" })
                            @Html.ValidationMessageFor(model => model.Descripcion)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <div class="input-group">
                            <input type="submit" value="Guardar" class="btn btn-success"/>
                        </div>
                        <div class="input-group">
                            @Html.ActionLink("Regresar","GetAll","CatalogoProducto", htmlAttributes: new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

